<form class="form-vertical">
  <div class="form-group">
    <label for="piece-title">Title</label>
    {{input value=piece.title class="form-control" id="piece-title" placeholder="Enter Piece Title"}}
  </div>
  <div class="form-group">
    <label for="piece-style">Style</label>
    {{input value=piece.style class="form-control" id="piece-style" placeholder="Enter Piece Style"}}
  </div>
  <div class="form-group">
    <label for="piece-subject">Subject</label>
    {{input value=piece.subject class="form-control" id="piece-subject" placeholder="Enter Piece Subject"}}
  </div>
  <div class="form-group">
    <label for="piece-medium">Medium</label>
    {{input value=piece.medium class="form-control" id="piece-medium" placeholder="Enter Piece Medium"}}
  </div>
  <div class="form-group">
    <label for="piece-size">Size</label>
    {{input value=piece.size class="form-control" id="piece-size" placeholder="Enter Piece Size"}}
  </div>
  <div class="form-group">
    <label for="piece-price">Price</label>
    {{input value=piece.price class="form-control" id="piece-price" placeholder="Enter Piece Price"}}
  </div>
  <p>{{input value=piece.asset type='file' id='file-field'}}</p>
  <button type="button" {{action "attachArtist"}}>Add Artist</button>

  {{#if showAddArtistForm}}
      <div class="form-group">
        {{input value=name class="form-control" placeholder="name"}}
        {{input value=location class="form-control" placeholder="location"}}
        {{input value=bio class="form-control" placeholder="bio"}}
        <!-- {{input value=piece.asset class="form-control"}}upload image -->
      </div>
  {{/if}}

  <button type="submit" class="btn btn-default" {{action "submit"}}>Submit</button>
</form>
