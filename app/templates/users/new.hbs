{{outlet}}
<div class="container">
<form class="form-horizontal">
  <fieldset>
    <legend>Sign Up!</legend>
    <div class="form-group">
  <label for="name" class="col-lg-2 control-label">Name</label>
  	{{input type="string" class="name" value=model.name placeholder="Add name..." id="name" }}
  </div>

<div class="form-group">
  <label for="password" class="col-lg-2 control-label">password</label>
  	{{input type="password"  class="password" value=model.password placeholder="Add password..." id="password"}}
</div>

<div class="form-group">
  <label for="password_confirmation" class="col-lg-2 control-label">password confirmation</label>
  {{input type="password"  class="password_confirmation" value=model.password_confirmation placeholder="Re-enter password..." id="password_confirmation"}}
</div>

<div class="form-group">
  <label for="email" class="col-lg-2 control-label">Email</label>
      {{input type="string" class="email" value=model.email placeholder="Add email..." id="email"}}
</div>

<div class="form-group">
  <label for="username" class="col-lg-2 control-label">Username</label>
          {{input type="string" class="username" value=model.username placeholder="Add username..." id="username"}}
</div>


<div class="form-group">
  <div class="col-lg-10 col-lg-offset-2">
  <button {{action 'save'}} id="submit" class="btn btn-primary">Save</button>
</div>
</div>
</fieldset>
</form>
</div>
